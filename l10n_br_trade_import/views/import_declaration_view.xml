<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="import_declaration_search" model="ir.ui.view">
        <field name="name">l10n_br_trade_import.declaration.search</field>
        <field name="model">l10n_br_trade_import.declaration</field>
        <field name="arch" type="xml">
            <search string="Import Declaration">
                <field name="document_number" />
                <field name="document_date" />
            </search>
        </field>
    </record>

    <record id="import_declaration_tree" model="ir.ui.view">
        <field name="name">l10n_br_trade_import.declaration.tree</field>
        <field name="model">l10n_br_trade_import.declaration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id" />
                <field name="document_number" />
                <field name="document_date" />
                <field name="account_move_id" />
                <!-- <field name="customs_clearance_location" />
                <field name="customs_clearance_state_id" />
                <field name="customs_clearance_date" />
                <field name="transportation_type" />
                <field name="intermediary_type" />
                <field name="third_party_partner_id" />
                <field name="afrmm_value" /> -->
                <field name="state" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="import_declaration_form" model="ir.ui.view">
        <field name="name">l10n_br_trade_import.declaration.form</field>
        <field name="model">l10n_br_trade_import.declaration</field>
        <field name="arch" type="xml">
            <form string="Import Declaration">
                <header>
                    <button
                        name="action_confirm"
                        string="Confirmar"
                        type="object"
                        class="oe_highlight"
                        states="draft"
                    />
                    <button
                        name="action_generate_invoice"
                        string="Gerar Fatura"
                        type="object"
                        class="oe_highlight"
                        states="open"
                    />
                    <button
                        name="action_back2draft"
                        string="Retornar para Rascunho"
                        type="object"
                        states="open"
                    />
                    <button
                        name="button_compute_average"
                        type="object"
                        string="Compute"
                        states="open"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group col="2">
                        <group name="main">
                            <field name="company_id" />
                            <field name="document_number" />
                            <field name="document_date" />
                        </group>
                        <group name="other_info">
                            <field name="fiscal_operation_id" />
                            <field name="account_move_id" />
                        </group>
                    </group>
                    <notebook>
                        <page name="information" string="Information">
                            <group>
                                <group name="general_info" string="General">
                                    <field name="third_party_partner_id" />
                                    <field name="exporting_partner_id" />
                                    <field name="transportation_type" />
                                    <field name="intermediary_type" widget="radio" />
                                </group>
                                <group
                                    name="customs_clearance"
                                    string="Customs Clearance"
                                >
                                    <field
                                        name="customs_clearance_location"
                                        string="Location"
                                    />
                                    <field
                                        name="customs_clearance_state_id"
                                        string="State"
                                    />
                                    <field
                                        name="customs_clearance_date"
                                        string="Date"
                                    />
                                </group>
                            </group>
                        </page>
                        <page name="additions" string="Additions">
                            <field name="addition_ids" nolabel="1" />
                        </page>
                        <page name="values" string="Add/Ded Values">
                            <field name="value_ids" nolabel="1" />
                        </page>
                        <page name="lines" string="Products">
                            <field name="line_ids" nolabel="1" />
                        </page>
                        <page name="notes" string="Notes">
                            <field name="additional_information" />
                        </page>
                        <page name="totals" string="Totals">
                            <group>
                                <group>
                                    <field name="company_currency_id" />
                                    <field name="currency_rate" />
                                </group>
                                <group>
                                    <field name="trade_currency_id" />
                                </group>
                            </group>
                            <notebook>
                                <page name="totals_brl" string="BRL">
                                    <group>
                                        <group>
                                            <field name="amount_freight_brl" />
                                            <field name="amount_insurance_brl" />
                                            <field name="amount_other_costs_brl" />
                                        </group>
                                        <group>
                                            <field name="afrmm_value" />
                                            <field name="amount_reais" />
                                            <field name="amount_currency" />
                                        </group>
                                    </group>
                                </page>
                                <page name="totals" string="Trade Currency">
                                    <group>
                                        <group>
                                            <field
                                                name="freight_currency_id"
                                                invisible="1"
                                            />
                                            <field
                                                name="insurance_currency_id"
                                                invisible="1"
                                            />
                                            <field
                                                name="other_costs_currency_id"
                                                invisible="1"
                                            />
                                        </group>
                                        <group>
                                            <field name="amount_freight" />
                                            <field name="amount_insurance" />
                                            <field name="amount_other_costs" />
                                        </group>
                                    </group>
                                </page>
                                <page name="other" string="Other">
                                    <field name="other_costs_ids" nolabel="1" />
                                </page>
                            </notebook>
                        </page>
                        <page name="other_info" string="Other Info">
                            <group>
                                <group>
                                    <field name="declaration_file" />
                                    <field name="is_imported" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

</odoo>
